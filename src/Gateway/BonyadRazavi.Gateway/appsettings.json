{
  "Security": {
    "AllowedCidrs": [ "192.168.93.0/27" ],
    "ApiAllowPrefixes": [ "/api/auth", "/api/account", "/api/users", "/api/audit", "/api/companies" ],
    "AllowLoopbackInDevelopment": false
  },
  "Jwt": {
    "Issuer": "BonyadRazavi.Auth.Api",
    "Audience": "BonyadRazavi.Portal"
  },
  "ReverseProxy": {
    "Routes": {
      "auth-login-route": {
        "ClusterId": "auth-api-cluster",
        "Order": 0,
        "Match": {
          "Path": "/api/auth/login",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "Anonymous",
        "RateLimiterPolicy": "login"
      },
      "auth-refresh-route": {
        "ClusterId": "auth-api-cluster",
        "Order": 1,
        "Match": {
          "Path": "/api/auth/refresh",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "Anonymous",
        "RateLimiterPolicy": "refresh"
      },
      "auth-revoke-route": {
        "ClusterId": "auth-api-cluster",
        "Order": 2,
        "Match": {
          "Path": "/api/auth/revoke",
          "Methods": [ "POST" ]
        },
        "AuthorizationPolicy": "Anonymous",
        "RateLimiterPolicy": "refresh"
      },
      "auth-protected-route": {
        "ClusterId": "auth-api-cluster",
        "Order": 10,
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "AuthorizationPolicy": "ApiJwt",
        "RateLimiterPolicy": "api-standard"
      },
      "account-route": {
        "ClusterId": "auth-api-cluster",
        "Order": 15,
        "Match": {
          "Path": "/api/account/{**catch-all}"
        },
        "AuthorizationPolicy": "ApiJwt",
        "RateLimiterPolicy": "api-standard"
      },
      "users-root-route": {
        "ClusterId": "auth-api-cluster",
        "Order": 19,
        "Match": {
          "Path": "/api/users"
        },
        "AuthorizationPolicy": "Anonymous",
        "RateLimiterPolicy": "api-standard"
      },
      "users-route": {
        "ClusterId": "auth-api-cluster",
        "Order": 20,
        "Match": {
          "Path": "/api/users/{**catch-all}"
        },
        "AuthorizationPolicy": "Anonymous",
        "RateLimiterPolicy": "api-standard"
      },
      "companies-root-route": {
        "ClusterId": "auth-api-cluster",
        "Order": 24,
        "Match": {
          "Path": "/api/companies"
        },
        "AuthorizationPolicy": "ApiJwt",
        "RateLimiterPolicy": "api-standard"
      },
      "companies-route": {
        "ClusterId": "auth-api-cluster",
        "Order": 25,
        "Match": {
          "Path": "/api/companies/{**catch-all}"
        },
        "AuthorizationPolicy": "ApiJwt",
        "RateLimiterPolicy": "api-standard"
      },
      "audit-route": {
        "ClusterId": "auth-api-cluster",
        "Order": 30,
        "Match": {
          "Path": "/api/audit/{**catch-all}"
        },
        "AuthorizationPolicy": "ApiJwt",
        "RateLimiterPolicy": "api-standard"
      },
      "web-route": {
        "ClusterId": "web-app-cluster",
        "Order": 100,
        "Match": {
          "Path": "/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "auth-api-cluster": {
        "Destinations": {
          "auth-api": {
            "Address": "https://localhost:7115/"
          }
        }
      },
      "web-app-cluster": {
        "Destinations": {
          "web-app": {
            "Address": "https://localhost:7197/"
          }
        }
      }
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*"
}

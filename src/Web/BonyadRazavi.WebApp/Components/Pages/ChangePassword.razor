@page "/profile/change-password"
@using BonyadRazavi.Shared.Contracts.Account
@using BonyadRazavi.WebApp.Components.Shared
@rendermode @(new InteractiveServerRenderMode(prerender: false))
@inject UserSession UserSession
@inject NavigationManager Navigation
@inject ChangePasswordApiClient ChangePasswordApiClient

<PageTitle>تغییر رمز عبور</PageTitle>

@if (!UserSession.IsAuthenticated || UserSession.Current is null)
{
    <section class="dashboard-state">
        <h1>جلسه کاربری فعال نیست</h1>
        <p>برای تغییر رمز عبور ابتدا وارد سامانه شوید.</p>
        <button class="dashboard-action" @onclick="GoToLogin">بازگشت به صفحه ورود</button>
    </section>
}
else
{
    <section class="portal-dashboard">
        <div class="dashboard-frame">
            <DashboardSidebar />

            <main class="dashboard-main">
                <header class="header-dashboard">
                    <div class="user-strip">
                        <div title="@UserSession.Current.UserName">
                            <img class="user-avatar" src="Images/dashboard/user.png" />
                        </div>
                        <p>@UserSession.Current.DisplayName</p>
                    </div>

                    <div class="btns-header">
                        <button class="btn-dashboard" @onclick="GoToDashboard">
                            <img class="icon-dashboard" src="Images/dashboard/dashboard.png" />
                            <span>داشبورد</span>
                        </button>
                        <div class="today-strip">امنیت حساب کاربری</div>
                    </div>

                </header>

                <h1 class="welcome-title">تغییر رمز عبور</h1>

                <div class="service-grid" style="grid-template-columns: 1fr;">
                    <div class="service-card" style="padding: 1.5rem; text-align: right;">
                        @if (!string.IsNullOrWhiteSpace(_successMessage))
                        {
                            <div style="margin-bottom:1rem; padding:0.75rem 1rem; border-radius:8px; background:#e9fff2; color:#136b3e;">
                                @_successMessage
                            </div>
                        }

                        @if (!string.IsNullOrWhiteSpace(_errorMessage))
                        {
                            <div style="margin-bottom:1rem; padding:0.75rem 1rem; border-radius:8px; background:#ffe5e5; color:#f00;">
                                @_errorMessage
                            </div>
                        }

                        <EditForm Model="_model" OnValidSubmit="SubmitAsync">
                            <DataAnnotationsValidator />

                            <div style="margin-bottom:1rem;">
                                <label style="display:block; margin-bottom:0.4rem; color:#fff;">رمز فعلی</label>
                                <InputText type="password" @bind-Value="_model.CurrentPassword" style="width:100%; min-height:44px; border-radius:10px; border:1px solid #d7def6; padding:0.5rem 0.8rem;" />
                                @foreach (var error in GetFieldErrors(nameof(ChangePasswordRequest.CurrentPassword)))
                                {
                                    <div style="margin-top:0.35rem; color:#f00; font-size:0.9rem;">@error</div>
                                }
                            </div>

                            <div style="margin-bottom:1rem;">
                                <label style="display:block; margin-bottom:0.4rem; color:#fff;">رمز جدید</label>
                                <InputText type="password" @bind-Value="_model.NewPassword" style="width:100%; min-height:44px; border-radius:10px; border:1px solid #d7def6; padding:0.5rem 0.8rem;" />
                                @foreach (var error in GetFieldErrors(nameof(ChangePasswordRequest.NewPassword)))
                                {
                                    <div style="margin-top:0.35rem; color:#f00; font-size:0.9rem;">@error</div>
                                }
                            </div>

                            <div style="margin-bottom:1.2rem;">
                                <label style="display:block; margin-bottom:0.4rem; color:#fff;">تکرار رمز جدید</label>
                                <InputText type="password" @bind-Value="_model.ConfirmNewPassword" style="width:100%; min-height:44px; border-radius:10px; border:1px solid #d7def6; padding:0.5rem 0.8rem;" />
                                @foreach (var error in GetFieldErrors(nameof(ChangePasswordRequest.ConfirmNewPassword)))
                                {
                                    <div style="margin-top:0.35rem; color:#f00; font-size:0.9rem;">@error</div>
                                }
                            </div>

                            <button class="dashboard-action" disabled="@_isSubmitting">
                                @(_isSubmitting ? "در حال ثبت..." : "ثبت تغییر رمز")
                            </button>
                        </EditForm>
                    </div>
                </div>
            </main>
        </div>
    </section>
}
